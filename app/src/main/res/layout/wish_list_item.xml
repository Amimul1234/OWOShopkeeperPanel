<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="6"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/wishList_product_image"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/sample_product"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/product_thumbnail"/>

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/wishList_product_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/samsung_a53_new_smartphone"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="20sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:id="@+id/wishList_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:text="@string/_00"
                    android:textColor="#F14813"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat" />

                <ImageView
                    android:id="@+id/wishList_item_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"/>


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>