<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_border"
    android:orientation="vertical"
    android:padding="16dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_drag_handle_24"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Coupon Code"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/coupon_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_black"
        android:hint="Coupon code"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/check_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons_blue"
        android:layout_marginTop="15dp"
        android:text="Check Coupon"
        android:textColor="@color/white"
        android:padding="15dp"
        android:textSize="18sp"/>

</LinearLayout>