<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:elevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/view_flipper_offer"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"/>

        <View
            android:id="@+id/edge1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#FAFAFA"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/view_flipper_offer"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabbed_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/edge1"
            app:tabIndicatorColor="@color/blue"
            >

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/brands"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brands"/>

        </com.google.android.material.tabs.TabLayout>

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#FAFAFA"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/tabbed_layout"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/category_and_brand_showing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="#FAFAFA"
            android:layout_below="@+id/divider5"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#FAFAFA"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/edge2"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>