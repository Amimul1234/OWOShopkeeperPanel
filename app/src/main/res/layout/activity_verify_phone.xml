<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".userRegistration.VerifyPhoneActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="5dp"
        android:src="@drawable/logo_final"
        android:contentDescription="@string/logo" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="@string/please_enter_verification_code"
        android:textAlignment="center"
        android:textColor="#0026FF" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#0026FF"
        android:layout_marginTop="25dp"
        android:visibility="gone"/>

    <EditText
        android:textSize="20sp"
        android:textColorHint="#666"
        android:id="@+id/otp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:hint="@string/enter_code"
        android:drawableStart="@drawable/ic_baseline_code_24"
        android:background="@drawable/edit_text_black"
        android:drawablePadding="10dp"
        android:inputType="number"
        android:autofillHints="code" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reset_otp_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resend_otp_in"
            android:textSize="17sp"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/countDownTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/time_count"/>

    </LinearLayout>

    <Button
        android:id="@+id/resend_otp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons_red"
        android:text="@string/resend_code"
        android:textAllCaps="false"/>

    <Button
        android:textSize="20sp"
        android:textColor="#fff"
        android:id="@+id/nextButton"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons_blue"
        android:text="@string/next"
        android:textAllCaps="false"/>

</LinearLayout>