<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".shopKeeperPanel.VerifyPhoneActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="5dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:text="Please, Enter verification code"
        android:textAlignment="center"
        android:textColor="#0026FF" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#0026FF"
        android:layout_marginTop="25dp"/>

    <EditText
        android:textSize="20sp"
        android:textColorHint="#666"
        android:id="@+id/otp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:hint="Enter Code"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:background="@drawable/edit_text_black"
        android:drawablePadding="10dp"
        android:inputType="number"/>

    <Button
        android:textSize="22sp"
        android:textColor="#fff"
        android:id="@+id/continue_btn"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons_blue"
        android:text="Continue"
        android:textAllCaps="false"/>

</LinearLayout>