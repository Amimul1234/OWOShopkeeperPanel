<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/customer_care"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/call_us_now"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttons_blue_small"
        android:text="@string/call_us_now"
        android:padding="5dp"
        android:drawableStart="@drawable/ic_baseline_call_24"
        android:drawableTint="@color/white"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/issue_a_complain"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_us_now"
        android:background="@drawable/buttons_blue_small"
        android:text="@string/issue_a_complain"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:drawableTint="@color/white"
        android:drawableStart="@drawable/ic_baseline_message_24"/>



</LinearLayout>