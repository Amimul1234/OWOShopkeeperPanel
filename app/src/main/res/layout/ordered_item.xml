<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/single_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_baseline_shopping_basket_24"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toEndOf="@+id/single_product_image"
            android:weightSum="3"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/single_product_name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:gravity="center"
                android:text="mncsdamcbkjdsacbsdakcb"/>

            <TextView
                android:id="@+id/single_product_price_and_quantity"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:gravity="center"
                android:text="4000 * 3"/>

            <TextView
                android:id="@+id/single_product_total_price"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:gravity="center"
                android:text="1200"/>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>