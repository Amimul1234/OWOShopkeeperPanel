<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopKeeperPanel.DummyPendingShopActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll"
        >

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/shop_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/home3"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shop Name:"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:background="@drawable/edittext_design"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/shop_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shop Address"
                android:textColorHint="@color/colorPrimary"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:background="@drawable/edittext_design"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/select_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Map Address (Mandatory)"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:padding="20dp"
                android:background="@drawable/edittext_design"
                android:drawableEnd="@drawable/ic_baseline_place_24"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"/>


            <EditText
                android:id="@+id/shop_service_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Service Mobile"
                android:textColorHint="@color/colorPrimary"
                android:inputType="number"
                android:padding="20dp"
                android:background="@drawable/edittext_design"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/shop_owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shop-owner Name:"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:background="@drawable/edittext_design"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/shop_owner_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_design"
                android:inputType="textMultiLine"
                android:padding="20dp"
                android:text="Shop-owner Mobile:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/shop_owner_nid"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/home3"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/shop_trade_licence"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/home3"
                android:scaleType="fitXY"
                android:layout_marginBottom="85dp"
                />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/create_shop_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Shop"
        android:fontFamily="@font/ethnocentric"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttons_blue"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_margin="15dp"
        />

</RelativeLayout>