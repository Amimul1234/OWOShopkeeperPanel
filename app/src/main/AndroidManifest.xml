<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.owoshopkeeperpanel">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".shopKeeperPanel.SubCategoryWiseProduct"></activity>
        <activity
            android:name=".shopKeeperPanel.CategoryWiseProduct"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.ChangePin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.CartActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/maps_api_key" />

        <activity
            android:name=".shopKeeperPanel.ZoomProductImage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.WishList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.SearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.BridgeofCartAndProduct"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.AfterShopRegisterRequest"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.ConfirmFinalOrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".shopKeeperPanel.MyProductsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.StoreSettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.MyShopActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.Contact_us"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.SetPinActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.ForgetVerifyPhoneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.ForgetPinOtpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.LocationFromMap"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.AfterRegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.TermsConditionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.VerifyPhoneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.RegisterWithOTPActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.RegisterFrontActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.ProductDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.ShopRegistrationRequest"
            android:screenOrientation="portrait" />
        <activity
            android:name=".shopKeeperPanel.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>